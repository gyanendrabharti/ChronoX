<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="24dp"
    tools:context=".MainActivity">

    <!-- Main Timer Card Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/timerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/card_background"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Timer Display -->
        <TextView
            android:id="@+id/timerDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/timerformat"
            android:textSize="42sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:textColor="@color/timer_text"
            android:gravity="center"
            android:padding="32dp"
            android:letterSpacing="0.1"
            android:elevation="8dp"
            android:maxLines="1"
            android:singleLine="true" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Milliseconds Display -->
    <TextView
        android:id="@+id/millisecondsDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_00"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:textColor="@color/milliseconds_text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/timerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Button Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/millisecondsDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Start Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/startButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/start"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="@color/start_button"
            app:cornerRadius="20dp"
            app:elevation="6dp"
            app:rippleColor="@color/start_button_ripple"
            app:strokeWidth="0dp"
            android:stateListAnimator="@animator/button_press_animator"
            app:icon="@drawable/ic_play"
            app:iconGravity="top"
            app:iconPadding="2dp"
            app:iconSize="18dp"
            app:iconTint="@android:color/white" />

        <!-- Stop Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/stopButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="@string/stop"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="@color/stop_button"
            app:cornerRadius="20dp"
            app:elevation="6dp"
            app:rippleColor="@color/stop_button_ripple"
            app:strokeWidth="0dp"
            android:stateListAnimator="@animator/button_press_animator"
            app:icon="@drawable/ic_stop"
            app:iconGravity="top"
            app:iconPadding="2dp"
            app:iconSize="18dp"
            app:iconTint="@android:color/white" />

        <!-- Reset Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/resetButton"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/reset"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="@color/reset_button"
            app:cornerRadius="20dp"
            app:elevation="6dp"
            app:rippleColor="@color/reset_button_ripple"
            app:strokeWidth="0dp"
            android:stateListAnimator="@animator/button_press_animator"
            app:icon="@drawable/ic_refresh"
            app:iconGravity="top"
            app:iconPadding="2dp"
            app:iconSize="18dp"
            app:iconTint="@android:color/white" />

    </LinearLayout>

    <!-- Floating Action Button for Lap/Split Times -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/lapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/floating"
        app:backgroundTint="@color/fab_background"
        app:tint="@android:color/white"
        app:elevation="12dp"
        app:borderWidth="0dp"
        app:rippleColor="@color/fab_ripple"
        android:src="@drawable/ic_flag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pulsing Animation View (hidden by default) -->
    <View
        android:id="@+id/pulseView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/pulse_circle"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="@id/timerCard"
        app:layout_constraintBottom_toBottomOf="@id/timerCard"
        app:layout_constraintStart_toStartOf="@id/timerCard"
        app:layout_constraintEnd_toEndOf="@id/timerCard" />

</androidx.constraintlayout.widget.ConstraintLayout>